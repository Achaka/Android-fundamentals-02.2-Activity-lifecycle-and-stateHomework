<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/counter"
        style="@style/textViewLandscapeAppearance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/counter_default_value"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/count_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/views_top_margin"
        android:text="@string/button_count"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/counter" />

    <EditText
        android:id="@+id/edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/views_top_margin"
        android:hint="@string/edit_text_hint"
        android:inputType="text"
        android:paddingHorizontal="@dimen/horizontal_edittext_padding"
        app:layout_constraintEnd_toEndOf="@+id/count_button"
        app:layout_constraintStart_toStartOf="@+id/count_button"
        app:layout_constraintTop_toBottomOf="@+id/count_button" />

</androidx.constraintlayout.widget.ConstraintLayout>